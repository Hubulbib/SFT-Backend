{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "rootDir": "./src",
    "target": "ES2018",
    "module": "ESNext",
    "lib": [
      "es6"
    ],
    "removeComments": true,
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts"
  ]
}